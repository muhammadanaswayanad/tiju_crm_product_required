<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- We'll inherit from the opportunity kanban view where product selection is more likely to be present -->
    <record id="crm_lead_view_form_inherit_product_required" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.product.required</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Instead of trying to modify an existing field, add a new field if needed 
                 and apply our conditional required attribute to it -->
            <field name="priority" position="after">
                <field name="stage_id" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
