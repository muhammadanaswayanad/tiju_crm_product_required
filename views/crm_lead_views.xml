<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- First, let's check if there's a custom field for course or find the right field to target -->
    <record id="crm_lead_view_form_inherit_product_required" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.product.required</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- You may need to adjust the xpath to target the correct field in your system -->
            <xpath expr="//notebook//field[@name='tag_ids']" position="after">
                <field name="course_id" attrs="{'required': [('stage_id.course_required', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
