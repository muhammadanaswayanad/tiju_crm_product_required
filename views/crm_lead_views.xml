<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_lead_view_form_inherit_product_required" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.product.required</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Find the product_id field and modify its attrs -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'required': [('stage_id.name', 'in', ['NI', 'NP', 'FP', 'P', 'HP', 'A', 'LOST'])]}</attribute>
                <attribute name="string">Course</attribute>
            </xpath>
        </field>
    </record>
</odoo>
